<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu</title>
</head>


<body>
    <%- include("./partials/nav") %>
  <h1>Full Menu</h1>
  <!-- for categories -->
   
  <!-- mains -->
  <h2> 🍱 Mains</h2>
  <ul>
    <% menu.forEach(item => { %>
        <% if ( item.category === "mains") { %>
            <li>
                <strong><%= item.name %></strong>  -  $<%= item.price %> 
                <br>  🍛 <%= item.details %> 
                <br> ⭐️ Rating: <%= item.rating %>/5
            </li>
            <br><hr>  
            <% } %>  
    <% }) %>
  </ul>


  <!-- desserts -->
  <h2> 🍰 Desserts</h2>
  <ul>
    <% menu.forEach(item => { %>
        <% if ( item.category === "desserts") { %>
            <li>
                <strong><%= item.name %></strong>  -  $<%= item.price %> 
                <br>  🍰 <%= item.details %> 
                <br> ⭐️ Rating: <%= item.rating %>/5
            </li>
            <br><hr>  
            <% } %>  
    <% }) %>
  </ul>


  <!-- sides -->
  <h2>🥗 Sides</h2>
  <ul>
    <% menu.forEach(item => { %>
        <% if ( item.category === "sides") { %>
            <li>
                <strong><%= item.name %></strong>  -  $<%= item.price %> 
                <br>  🥗 <%= item.details %> 
                <br> ⭐️ Rating: <%= item.rating %>/5
            </li>
            <br><hr>  
            <% } %>  
    <% }) %>
  </ul>

</body>
</html>
